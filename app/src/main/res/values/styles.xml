<resources>

  <!-- Base application theme. -->
  <!--Theme.AppCompat.Light.DarkActionBar-->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorAccent</item>
    <item name="colorPrimaryDark">@color/colorAccent</item>
    <item name="colorAccent">@color/blue_300</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="LayoutWeightWidth">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
  </style>


  <style name="LayoutWrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="LayoutMatch">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>


  <style name="CardUser" parent="LayoutWrap"/>

  <style name="CardRepos" parent="LayoutWrap"/>

  <style name="CardRepos.Stats">
    <item name="android:textColor">@color/reposStats</item>
    <item name="android:textSize">@dimen/text_size_12</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CardRepos.Description">
    <item name="android:textSize">@dimen/text_size_14</item>
    <item name="android:textColor">@color/reposDescription</item>
  </style>

  <style name="CardRepos.Meta">
    <item name="android:textSize">@dimen/text_size_13</item>
    <item name="android:textColor">@color/reposMeta</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:layout_marginTop">@dimen/margin_8</item>
  </style>

  <style name="CardRepos.Name">
    <item name="android:textSize">@dimen/text_size_16</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:layout_marginTop">@dimen/margin_8</item>
    <item name="android:layout_marginEnd">@dimen/margin_32</item>
    <item name="android:layout_marginRight">@dimen/margin_32</item>
  </style>


  <style name="SearchRepos" parent="LayoutWrap">

  </style>

  <style name="SearchRepos.Linear" parent="LayoutWeightWidth">
    <item name="android:gravity">center</item>
  </style>

  <style name="SearchRepos.Filter">
    <item name="android:button">@null</item>
    <item name="android:drawableEnd">@drawable/selector_arrow_indicate</item>
    <item name="android:drawableRight">@drawable/selector_arrow_indicate</item>
    <item name="android:textColor">@color/reposStats</item>
  </style>

  <style name="CardUser.Meta">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:textSize">12sp</item>
    <item name="android:drawablePadding">2dp</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
  </style>

  <style name="CardUser.Avatar">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_marginBottom">@dimen/margin_8</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:layout_marginTop">@dimen/margin_8</item>
  </style>

  <style name="CardUser.Follow">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/margin_8</item>
    <item name="android:layout_marginRight">@dimen/margin_8</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:background">@drawable/shape_follow</item>
    <item name="android:button">@null</item>
    <item name="android:paddingBottom">@dimen/padding_4</item>
    <item name="android:paddingEnd">@dimen/padding_8</item>
    <item name="android:paddingLeft">@dimen/padding_8</item>
    <item name="android:paddingRight">@dimen/padding_8</item>
    <item name="android:paddingStart">@dimen/padding_8</item>
    <item name="android:paddingTop">@dimen/padding_4</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CardUser.Name">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:layout_marginTop">@dimen/margin_8</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="IssueComment" parent="LayoutWrap"/>

  <style name="IssueComment.Title">
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="IssueComment.State">
    <item name="android:layout_marginBottom">@dimen/margin_8</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:layout_marginTop">@dimen/margin_8</item>
    <item name="android:background">@drawable/shape_issue_open</item>
    <item name="android:drawableLeft">@drawable/ic_issue_open_white</item>
    <item name="android:drawablePadding">@dimen/margin_2</item>
    <item name="android:drawableStart">@drawable/ic_issue_open_white</item>
    <item name="android:padding">@dimen/padding_6</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="IssueComment.Login">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
    <item name="android:layout_marginTop">@dimen/margin_8</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="IssueComment.CreateAt">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginLeft">@dimen/margin_8</item>
    <item name="android:layout_marginStart">@dimen/margin_8</item>
  </style>

</resources>
