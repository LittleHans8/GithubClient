<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@drawable/user_bookmark" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4078c0"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="bootstrap"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="64dp" />

        <TextView
            android:id="@+id/text_join_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Joined on 15 May 2011"
            android:textSize="12sp"
            android:textColor="#767676"
            android:drawableLeft="@drawable/ic_ve"
            tools:layout_editor_absoluteY="39dp"
            tools:layout_editor_absoluteX="246dp" />

        <TextView
            tools:text="Bakersfield, Ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableLeft="@drawable/ic_join_time"
            android:layout_marginBottom="8dp" />

        <TextView
            tools:text="LittleHans8@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="39dp"
            tools:layout_editor_absoluteX="180dp"
            android:id="@+id/textView8"
            android:drawableLeft="@drawable/ic_mail"/>


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>

