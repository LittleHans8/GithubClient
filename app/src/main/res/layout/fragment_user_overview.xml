<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/avatar"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:placeholderImage="@drawable/littlehans"
      />

  <TextView
      android:id="@+id/text_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintLeft_toRightOf="@+id/avatar"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="LittleHans"
      />

  <TextView
      android:id="@+id/text_login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/avatar"
      app:layout_constraintLeft_toRightOf="@+id/avatar"
      tools:text="LittleHans8"
      />

  <TextView
      android:id="@+id/text_bio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/avatar"
      tools:text="Hello World :-)"
      />

  <TextView
      android:id="@+id/text_follow"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/selector_btn_sign_in"
      android:clickable="true"
      android:gravity="center"
      android:padding="8dp"
      android:text="@string/follower"
      android:textColor="@android:color/white"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_bio"
      />

  <View
      android:id="@+id/view_divider"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:background="@android:color/darker_gray"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_follow"
      />

  <TextView
      android:id="@+id/text_company"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:drawableLeft="@drawable/ic_organization"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_organization"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view_divider"
      tools:text="Student:-)"
      />
  <TextView
      android:id="@+id/text_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:drawableLeft="@drawable/ic_location"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_location"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_company"
      tools:text="China"
      />
  <TextView
      android:id="@+id/text_email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:autoLink="email"
      android:drawableLeft="@drawable/ic_mail"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_mail"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_location"
      tools:text="LittleHans8@gmail.com"
      />
  <TextView
      android:id="@+id/text_blog"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:autoLink="web"
      android:drawableLeft="@drawable/ic_link"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_link"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_email"
      tools:text="https://github.com"
      />
  <TextView
      android:id="@+id/text_create_at"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:drawableLeft="@drawable/ic_join"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_join"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_blog"
      tools:text="Joined on 11 Nov 2015"
      />
</android.support.constraint.ConstraintLayout>